<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
    </style>
    <style name="navigationTheme">
        // color of  text and icon when item get selected...//
        <item name="android:colorPressedHighlight">@color/colorAccent</item>
        //Background color item get selected//
        <item name="colorAccent">@color/cardview_light_background</item>

    </style>
</resources>